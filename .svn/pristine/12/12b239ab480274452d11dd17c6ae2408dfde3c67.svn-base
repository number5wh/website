<div class="sysWin" style="800px">
	<h2 class="f2 white">
		<div class="tLeft f1 left"></div>设置大厅版本
		<div class="tRight f1 right"></div>
		<a title="关闭" class="btnCls f3 right" href="javascript:void(0);" onclick="main.CloseMsgBox(true,'GameHallVersion')"/></a>
		<br class="clear" />
	</h2>	
	<div class="bdy">
		<table width="100%" border="0" cellpadding="1" cellspacing="1" class="tbList clear">
			<tr>
				<td height="0" align="right" bgcolor="#FFFFFF">文件名称:</td>
				<td align="left" bgcolor="#FFFFFF"><input type="text" class="txt" size="15" id="FileName" value="{$GameVersion.FileName}" /></td>
				<td align="right" bgcolor="#FFFFFF">下载路径:</td>
				<td align="left" bgcolor="#FFFFFF"><input type="text" class="txt" size="20" id="FileURL" value="{$GameVersion.FileURL}" /></td>
				<td align="right" bgcolor="#FFFFFF">版 本 号:</td>
				<td align="left" bgcolor="#FFFFFF"><input type="text" class="txt" size="10" id="GameVersion" value="{$GameVersion.Version}" style="margin-right:25px;" /></td>
			</tr>	
			<tr>
				<td width="15%"  align="right" bgcolor="#FFFFFF">安装目录:</td>
			  <td width="15%" align="left" bgcolor="#FFFFFF"><input type="text" class="txt" size="15" id="LocalPath" value="{$GameVersion.LocalPath}" /></td>
				<td width="14%" align="right" bgcolor="#FFFFFF">下载服务器:</td>
				<td width="29%" align="left" bgcolor="#FFFFFF"><select name="ServerID" id="ServerID" style="width:145px;">
                 	<option value="">选择服务器</option>				  
						{foreach from=$ServerList item=server}						
				  		<option value="{$server.ServerID}" title="{$server.ServerIP}" {if $GameVersion.ServerID==$server.ServerID}selected{/if}>{$server.FixServerIP}</option>				
						{/foreach}					
			    	</select>
				</td>
				<td width="12%" align="right" bgcolor="#FFFFFF">安装类型:</td>
				<td width="15%" align="left" bgcolor="#FFFFFF">
				<select name="FileCategory" id="FileCategory">
                  <option value="1" {if $GameVersion.FileCategory=='1'}selected{/if}>解压</option>
                  <option value="2" {if $GameVersion.FileCategory=='2'}selected{/if}>覆盖</option>
                  <option value="3" {if $GameVersion.FileCategory=='3'}selected{/if}>运行</option>
                </select></td>
			</tr>	
		</table>
	</div>

	<div class="bot f2">
		<div class="botLeft f1 left"></div>
		<div class="botRight f1 right"></div>
		<input type="button" class="btn f2 right" value="取 消" onclick="main.CloseMsgBox(true,'GameHallVersion')"/>
		<input type="button" class="btn f2 right" value="提 交" id="btnAddGameVersion" />
		<input type="hidden" id="KindID" value="0" />
		<input type="hidden" id="VerID" value="{$GameVersion.VerID}" />
        <div class="orange right" id="ResultMsg"></div>
		<br class="clear" />
	</div>
</div>
<script type="text/javascript" language="javascript">
{literal}
$(function(){
	$('#btnAddGameVersion').click(function(){
{/literal}
		setting.Url='{au d=YunWei c=GameHallVersion a=addGameVersion}';
		sys.AddGameVersion();
{literal}
	});
})
{/literal}
</script>