<table width="100%" border="0" cellpadding="1" cellspacing="1" class="tbList txt_M" style="margin-top:10px">
  <tr>
    <th width="18%">充值更新时间</th>
    <th width="19%">充值订单号</th>
    <th width="21%">充值方式</th>
    <th width="17%">充值金额</th>  
    <!--<th width="12%">购买数量(金币)</th>-->
    <th width="25%">状态</th>
  </tr>
  {foreach from=$RechargeList item=R}
  <tr class="bg_color">
    <td>{$R.UpdateTime}</td>
    <td>{$R.SpOrderNo}</td>
    <td>{$R.CardTypeTip}<!--({$R.Corp})--></td>
    <td>{$R.TotalFee/1000}</td>
	<!--<td>{$R.Count}</td>-->
    <td>{$R.StatusTip}</td>
  </tr> 
  {foreachelse}
  <tr class="bg_color">
    <td colspan="5">很抱歉，没有您要查询的信息~</td>
  </tr>  
  {/foreach}
  {if $RechargeList} 
  <tr class="bg_color">
    <td id="RechargeRecordsPages" colspan="6">{include file="$skin/Inc/Page.inc.html"}</td>
  </tr>
  {/if}
</table>