<link type="text/css" rel="stylesheet" href="/css/common.css" />
<link type="text/css" rel="stylesheet" href="/css/blue.css" />
<script type="text/javascript" language="javascript" src="/js/jquery-1.4.2.min.js"></script>
<script type="text/javascript" language="javascript" src="/js/init.js"></script>
<script type="text/javascript" language="javascript" src="/js/common.js"></script>
<div class="sysWin">
	<h2 class="f2 white">
		<div class="tLeft f1 left"></div>批量修改服务器IP		
		<div class="tRight f1 right"></div>
		<a title="关闭" class="btnCls f3 right btnCancel" href="javascript:void(0);" /></a>
		<br class="clear" />
	</h2>
	
	<div class="bdy">
		<input type="hidden" name="ServerID" id="ServerID" value="{$server.ServerID}" />
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
		  <tr>
			<td align="right">原外网地址:</td>
			<td>
			<input type="text" name="OldServerIP" id="OldServerIP" />
			</td>
		  </tr>
		  <tr>
			<td align="right">新外网地址:</td>
			<td>
			<textarea name="ServerIP" id="ServerIP" cols="30" rows="5" class="textarea"></textarea>
			 <span class="orange">*格式如127.0.0.1,多个请换行</span>
			</td>
		  </tr>
	  </table>

	</div>

	<div class="bot f2">
		<div class="botLeft f1 left"></div>
		<div class="botRight f1 right"></div>
		<input type="button" class="btn f2 right" value="提 交" id="btnAddServer" />
        <div class="orange right" id="AddServerMsg"></div>
		<br class="clear" />
	</div>
</div>
<script type="text/javascript" language="javascript">
{literal}
$(function(){
		/*提交*/
		$('#btnAddServer').click(function(){
{/literal}
			var Url='{au d=YunWei c=ServerProcess a=updateServer}';				
			var OldServerIP = $('#OldServerIP').val().replace(/[\r\n]/g,',').replace(/[,]+/g,',');
			var ServerIP = $('#ServerIP').val().replace(/[\r\n]/g,',').replace(/[,]+/g,',');
			var Params = 'OldServerIP='+OldServerIP+'&ServerIP='+ServerIP;
			ajax.RequestJsonCallBack(Url,Params,callback.UpdateServer);
{literal}		
		})
	});
var callback={
	UpdateServer:function(data){
		$('#AddServerMsg').html(data.Msg);
	}
};
{/literal}
</script>