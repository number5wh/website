<div class="sysWin">
	<h2 class="f2 white">
		<div class="tLeft f1 left"></div>设置游戏任务
		<div class="tRight f1 right"></div>
		<a title="关闭" class="btnCls f3 right" href="javascript:void(0);" onclick="main.CloseMsgBox(true,'GameTable')"/></a>
		<br class="clear" />
	</h2>
	
	<div class="bdy">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
		  <tr>
			<td class="txt_R">任务ID:</td>
			<td><input type="text" class="txt" name="TaskSortID" id="TaskSortID" value="{$GameTask.TaskSortID}"/> <span class="orange">*</span></td>
		  </tr>		
		  <tr>
			<td class="txt_R">游戏种类:</td>
			<td>	
				<select name="KindID" id="KindID" >
					{foreach from=$RoomKind item =t}
						<option  value="{$t.KindID}" {if $t.KindID eq $GameTask.KindID} selected ="selected"{/if}>{$t.KindName}</option>
					{/foreach}
				</select>
				<span class="orange">*</span>
			</td>
		  </tr>		  
		  <tr>
			<td class="txt_R">房间类型:</td>
			<td>
				<select name="RoomType" id="RoomType" >
					{foreach from=$RoomType item =t}
						<option  value="{$t.TypeID}" {if $t.TypeID eq $GameTask.RoomType} selected ="selected"{/if}>{$t.TypeName}</option>
					{/foreach}
				</select>
				<span class="orange">*</span>
			</td>
		  </tr>
		  <tr>
			<td class="txt_R">游戏局数:</td>
			<td><input type="text" class="txt" name="GameCount" id="GameCount" value="{$GameTask.GameCount}"/> <span class="orange">*</span></td>
		  </tr>
		  <tr>
			<td class="txt_R">奖励金币数:</td>
			<td><input type="text" class="txt" name="AwardMoney" id="AwardMoney" value="{$GameTask.AwardMoney}"/> <span class="orange">*</span></td>
		  </tr>
	  </table>

	</div>

	<div class="bot f2">
		<div class="botLeft f1 left"></div>
		<div class="botRight f1 right"></div>
		<input type="button" class="btn f2 right" value="取 消" onclick="main.CloseMsgBox(true,'GameTable')"/>
		<input type="button" class="btn f2 right" value="提 交" id="btnAddGameTask" onclick="sys.AddGameTask('{au d=YunWei c=GameTask a=updateGameTaskInfo}');" />
        <div class="orange right" id="AddGameTaskMsg"></div>
		<br class="clear" />
	</div>
</div>