<table width="100%" border="0" cellpadding="1" cellspacing="1" class="tbList txt_M">
    <tr>
        <th width="5%">房间ID</th>
        <th width="20%">游戏标识</th>
        <th width="20%">房间名称</th>
        <th width="15%">房间类型</th>
        <th width="10%">桌子数</th>
        <th width="15%">最大人数</th>
        <th width="15%">房间概率</th>
        <th width="15%">初始库存</th>
        <th width="15%">当前库存</th>
        <th width="15%"></th>
    </tr>
    {foreach from=$GameRoomList item=GameRoom}
    <tr class="bg_color">
        <td>{$GameRoom.RoomID}</td>
        <td>{$GameRoom.GameKindIDName}</td>
        <td>{$GameRoom.RoomName}</td>
        <td>{$GameRoom.RoomTypeName}</td>
        <td>{$GameRoom.MaxTableCount}</td>
        <td>{$GameRoom.MaxPlayerCount}</td>
        <td>{$GameRoom.CtrlRatio}</td>
        <!--<td>{$GameRoom.nInitStorage}</td>-->
        <!--<td>{$GameRoom.nCurrentStorage}</td>-->
        <!--<td>-->
            <!--<input type="text" class="edit"  value="{$GameRoom.CtrlRatio}" id="ration_{$GameRoom.RoomID}"-->
                  <!--maxlength="5" name="txtRatio" style="width: 80px;">-->
            <!--</td>-->
        <td>
            <input type="text" class="edit"  value="{$GameRoom.nInitStorage}" id="Storage_{$GameRoom.RoomID}" maxlength="8"
                   name="txtStorage" style="width: 80px;" onblur="setInitStorage('{$GameRoom.RoomID}', $(this).attr('value'))">
            </td>
        <td>
            <input type="text" class="edit"  value=" {$GameRoom.nCurrentStorage}" id="CurrentStorage_{$GameRoom.RoomID}"
                   maxlength="8" name="txtcurrStorage" style="width: 80px;" onblur="setCurrStorage('{$GameRoom.RoomID}', $(this).attr('value'))">

        </td>
        <td>
            <span id="setfinish_{$GameRoom.RoomID}" style="color: red"></span>
            <a href="javascript:void(0)" onclick="showEdit('{$GameRoom.RoomID}');" class="edit" id="setctrl">设置概率</a>
            <a href="javascript:void(0)" onclick="showInfo('{$GameRoom.RoomID}');" class="edit" >查看概率</a>
        </td>
    </tr>
    {foreachelse}
    <tr class="bg_color">
        <td colspan="10">暂无房间记录</td>
    </tr>
    {/foreach}
    {if $GameRoomList}
    <tr class="bg_color">
        <td colspan="10">{include file="$skin/Inc/Page.inc.html"}</td>
    </tr>
    {/if}
</table>
<script type="text/javascript" language="javascript">
    {literal}
    var sys = {
        callback : function (data) {
            alert('修改成功');
        }
    };

    function showEdit(RoomId){
        {/literal}
        setting.Url='{au d=Service c=ControlleUser a=showEdit}';
        {literal}

        var params ='RoomId='+RoomId;

        if(isNaN(RoomId) || RoomId=='' ){
               alert('*参数异常');
                return false;
        }
        ajax.RequestUrl(setting.Url,params,'callback.ShowEditRoom');
    }

    function showInfo(RoomId){
        {/literal}
        setting.Url='{au d=Service c=ControlleUser a=showInfo}';
        {literal}

        var params ='RoomId='+RoomId;

        if(isNaN(RoomId) || RoomId=='' ){
            alert('*参数异常');
            return false;
        }
        ajax.RequestUrl(setting.Url,params,'callback.ShowEditRoom');
    }

    function setInitStorage(RoomId,initStorage){
        {/literal}
        setting.Url='{au d=Service c=ControlleUser a=setInitStorage}';
        {literal}

        var params ='InitStorage='+initStorage+'&RoomId='+RoomId;
        if(isNaN(initStorage) || initStorage=='' ){
            alert('*参数异常');
            return false;
        }
        if(isNaN(RoomId) || RoomId=='' ){
            alert('*参数异常');
            return false;
        }
        ajax.RequestUrl(setting.Url,params,'sys.callback');
    }

    function setCurrStorage(RoomId,currStorage){
        {/literal}
        setting.Url='{au d=Service c=ControlleUser a=setCurrStorage}';
        {literal}

        var params ='CurrStorage='+currStorage+'&RoomId='+RoomId;
        if(isNaN(currStorage) || currStorage=='' ){
            alert('*参数异常');
            return false;
        }
        if(isNaN(RoomId) || RoomId=='' ){
            alert('*参数异常');
            return false;
        }
        ajax.RequestUrl(setting.Url,params,'sys.callback');
    }
    {/literal}
</script>