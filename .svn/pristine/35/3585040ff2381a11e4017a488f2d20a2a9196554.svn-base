<div class="sysWin">
    <h2 class="f2 white">
        <div class="tLeft f1 left"></div>新增玩家
        <div class="tRight f1 right"></div>
        <a title="关闭" class="btnCls f3 right" href="javascript:void(0);" onclick="main.CloseMsgBox(true,'HappyBeanlist')"></a>
        <br class="clear" />
    </h2>

    <div class="bdy">
        <table width="100%" border="0" cellpadding="1" cellspacing="1" class="tbList">
            <tr>
                <td width="17%" align="right" bgcolor="#FFFFFF" >玩家编号:</td>
                <td width="83%" bgcolor="#FFFFFF"><input type="text" class="txt" name="roleid" id="roleid" value=""></td>
            </tr>
            <tr>
                <td width="17%" align="right" bgcolor="#FFFFFF" >玩家昵称:</td>
                <td width="83%" bgcolor="#FFFFFF"><input type="text" class="txt" name="nickname" id="nickname" value=""></td>
            </tr>
            <tr>
                <td width="17%" align="right" bgcolor="#FFFFFF" >金额总和:</td>
                <td width="83%" bgcolor="#FFFFFF"><input type="text" class="txt" name="totalmoney" id="totalmoney" value=""></td>
            </tr>

        </table>
        <div class="bot f2">

            <div class="botLeft f1 left"></div>

            <div class="botRight f1 right"></div>
            <input type="button" class="btn f2 right" value="取 消" onclick="main.CloseMsgBox(true,'HappyBeanlist')"/>
            <input type="button" class="btn f2 right" value="确 定" id="btnAddAd" />

            <div class="orange right" id="ResultMsg"></div>
            <br class="clear" />
        </div>
    </div>
    <script type="text/javascript" language="javascript">
        {literal}
        var ctrlEdit={
            BindEvent:function(){
                $('#btnAddAd').click(function(){
        {/literal}
                setting.Url='{au d=Service c=HappyBeanlist a=doAdd}';
        {literal}
                        $('#ResultMsg').next().html('');
                        var nickname = $('#nickname').val();
                        var roleid   = $('#roleid').val();
                        var totalmoney   = $('#totalmoney').val();


                        if(nickname=='' || roleid == '' || totalmoney == '' || isNaN(totalmoney)){
                            $('#ResultMsg').html('*参数异常');
                            return false;
                        }


                        setting.Params = 'nickname='+nickname+'&roleid='+roleid+'&totalmoney='+totalmoney;
                        ajax.RequestUrl(setting.Url,setting.Params,'callback.SetBankMoney');
                    });
            }
        }
        {/literal}

    </script>